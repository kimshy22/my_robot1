<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

  <!-- BASE LINK -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.10" length="0.02"/> <!-- 20cm diameter base chassis -->
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- LEFT WHEEL -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <origin xyz="0.09 0.06 0.03" rpy="1.5708 0 0"/>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.09 0.06 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
   <!-- RIGHT WHEEL -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <origin xyz="0.09 -0.06 0.03" rpy="1.5708 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.09 -0.06 0.03" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <!-- FRONT CASTER -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.1 0 0" rpy="0 0 0"/>
  </joint>
 <!-- REAR CASTER -->
  <link name="rear_caster">
    <visual>
      <geometry>
        <sphere radius="0.015"/>
      </geometry>
      <origin xyz="-0.1 0 0" rpy="0 0 0"/>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="rear_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="rear_caster"/>
    <origin xyz="-0.1 0 0" rpy="0 0 0"/>
  </joint>
  
  <!-- TOP CHASSIS WITH LIDAR -->
  <link name="top_plate">
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.01"/> <!-- slightly smaller t-->   
           </geometry>
      <origin xyz="0 0 0.12" rpy="0 0 0"/>
      <material name="orange">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="top_plate_joint" type="fixed">
    <parent link="base_link"/>
    <child link="top_plate"/>
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
  </joint>
  
  <!-- LIDAR -->
  <link name="lidar">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0.145" rpy="0 0 0"/>
      <material name="black"/>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="top_plate"/>
    <child link="lidar"/>
    <origin xyz="0 0 0.025" rpy="0 0 0"/>
  </joint>
</robot>